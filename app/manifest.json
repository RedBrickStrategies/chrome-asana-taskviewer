{
    "name": "Asana Task Viewer",
    "description": "This chrome app allows you to view (offline) and manage your tasks from your desktop.",
    "version": "20",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "app.window",
        "notifications",
        "storage",
        "<all_urls>",
        "alwaysOnTopWindows",
        "unlimitedStorage"
    ],
    "commands": {
        "toggle_window": {
            "suggested_key": {
                "default": "Ctrl+Shift+5"
            },
            "description": "Toggle window",
            "global": true
        },
        "cycle_projects_up": {
            "description": "Cycle up through projects"
        },
        "cycle_projects_down": {
            "suggested_key": {
                "default": "Ctrl+Right"
            },
            "description": "Cycle down through projects"
        },
        "cycle_workspaces_up": {
            "description": "Cycle up through workspaces"
        },
        "cycle_workspaces_down": {
            "suggested_key": {
                "default": "Ctrl+Down"
            },
            "description": "Cycle down through workspaces"
        },
        "cycle_completed": {
            "suggested_key": {
                "default": "Alt+D"
            },
            "description": "Cycle through completed property"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js"
            ]
        }
    }
}